# https://editorconfig.org/

root = true

# 表示所有的文件适用
[*]
# 设置文件字符集为 utf-8
charset = utf-8
# 控制换行类型（lf  | cr  |  crlf）
end_of_line = lf
# 缩进风格（tab | sapce）
indent_style = tab
# 缩进大小
indent_size = 2
# tab 缩进大小（当 indent_style 设置为 tab 时可用）
tab_width = 2
# 始终在文件末尾插入一个新行
insert_final_newline = true


# md 文件使用以下规则
[*.md]
# 关闭最大行长度限制
max_line_length = off
# 关闭末尾空格修剪
trim_trailing_whitespace = false